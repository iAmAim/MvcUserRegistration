@model UserRegistrationApplication.Models.UserRegisterModel

@{
    ViewBag.Title = "UserRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <link href="@Url.Content("~/Content/BaseStyleSheet.css")" rel="stylesheet" type="text/css" />
 <div id="date"></div>
<h2>User Registration Form</h2>
    
    
   <!-- Modal  -->
    <a class="button" href="#openModal" >Register Now!</a>
    
    <div id="openModal" class="modalbg"> 
	  <div class="dialog"> 
		<a href="#close" title="Close" class="close" onclick="clearValidation();">X</a>

          <!-- modal contents*/ -->
            @Html.Partial("RegistrationModal")
	
		</div>
     </div>
	  
    <!--Scripts HERE -->

    
<script type="text/javascript">

    var d = new Date();
    var today = d.toDateString();
    var weekday = new Array(7);
    weekday[0] = "Sunday";
    weekday[1] = "Monday";
    weekday[2] = "Tuesday";
    weekday[3] = "Wednesday";
    weekday[4] = "Thursday";
    weekday[5] = "Friday";
    weekday[6] = "Saturday";

    var n = weekday[d.getDay()];

    var todayDate = n + ', ' + today.substring(3);
    document.getElementById("date").innerHTML = todayDate;


</script>

@section FooterScripts
{
    <script src="@Url.Content("~/Scripts/ValidateForm.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ShowDate.js")" type="text/javascript"></script>
}


