@model UserRegistrationApplication.Models.UserRegisterModel
<h2>User Registration</h2>

@using (Html.BeginForm("", "", FormMethod.Post, new { onsubmit = " return validateForm();" }))
{   
    <div class="formRowContainer">
        <div class="labelContainer">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="valueContainer">
            @Html.TextBoxFor(model => model.Name, new { name = "Name", onblur = "validateField(this)" })
            <p id="val-Name" class="text-validation">
                @Html.ValidationMessage("Name")
            </p>
        </div>
    </div>
    <div class="clearStyle">
    </div>
    <div class="formRowContainer">
        <div class="labelContainer">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="valueContainer">
            @Html.PasswordFor(model => model.Password, new { Model.Password, onblur = "validateField(this)" })
            <p id="val-Password" class="text-validation"></p>
        </div>
    </div>
    <div class="clearStyle">
    </div>
    <div class="formRowContainer">
        <div class="labelContainer">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="valueContainer">
            @Html.TextBoxFor(model => model.Email, new { Model.Email, onblur = "validateField(this)" })
            <p id="val-Email" class="text-validation"></p>
        </div>
    </div>
    <div class="clearStyle">
    </div>
    <div class="buttonContainer">
        <button>
            Register</button></div>               
}
