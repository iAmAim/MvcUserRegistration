@model UserRegistrationApplication.Models.UserRegisterModel

<h2>User Registration</h2>@using(Html.BeginForm())
{   
    <div class="formRowContainer">
        <div class="labelContainer">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="valueContainer">
            @Html.TextBoxFor(model => model.Name, new { name="Name", onblur="validateField(this)"  })
            @Html.ValidationMessage("Name")
            <p id="val-Name"> name error message here</p>
        </div>                  
    </div>
    <div class="clearStyle"></div>
    <div class="formRowContainer">
        <div class="labelContainer">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="valueContainer">
            @Html.PasswordFor(model => model.Password, new { Model.Password, onblur="validateField(this)"  })
            <p id="val-Password"> pswd error message here</p>
        </div>
    </div>
    <div class="clearStyle"></div>
    <div class="formRowContainer">
        <div class="labelContainer">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="valueContainer">
            @Html.TextBoxFor(model => model.Email, new { Model.Email, onblur="validateField(this)"  })
            <p id="val-Email"> email error message here</p>
        </div>
    </div>
    <div class="clearStyle"></div>
    <div class="buttonContainer">
        
    <button onclick="validateField();">Register</button></div>               
}
        
  
           